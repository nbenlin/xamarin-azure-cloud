<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="projectCdv.MapPage">


    
    <ListView x:Name="placesListView" ItemSelected="placesListView_ItemSelected" ItemsSource="{Binding Posts}">
        
        <ListView.ItemTemplate>
            <DataTemplate>
                <TextCell Text="{Binding City}" Detail="{Binding Country}" />
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>